body {
  font-family: system-ui, sans-serif;
  background: #f5f5f5;
  padding: 2rem;
  text-align: center;
}

.box {
  background: white;
  padding: 2rem;
  max-width: 400px;
  margin: auto;
  border-radius: 10px;
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

input, button {
  width: 100%;
  padding: 0.8rem;
  margin: 0.5rem 0;
  font-size: 1rem;
}

button {
  cursor: pointer;
  background: #222;
  color: white;
  border: none;
  border-radius: 5px;
}
